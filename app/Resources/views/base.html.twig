    <body >
        <div class="logo">Carreras por La Rioja</div>

        <div class="sombra">
            <div class="nucleo">
                <div id="lang">
                    
                    

{% set locale = app.request.locale %}


{% if locale == 'es' %}
   <span>Español</span>
   <a href="{{ path('show_corredores', { '_locale': 'en' }) }}">English</a>
{% elseif locale == 'en' %}
   <a href="{{ path('show_corredores', { '_locale': 'es' }) }}">Español</a>
   <span>English</span>
{% endif %}

                                    </div>
            </div>
        </div>

        <div class="barra_menus">	
      <div class="pestanias">
        <div class="grupoPestanias">
            <div class="pestaniaSel"><a href="/{{locale}}">{{ "ZonaCorredores" | trans }}</a></div>
	  <div class="pestaniaNoSel"><a href="/es/organizaciones">{{ "ZonaOrganizaciones" | trans }}</a></div>
          <div class="pestaniaNoSel"><a href="/admin/">Intranet</a></div>
        </div>
      </div>
           {% if app.user %}
        
        <div id="menu">
        <ul>
          <li>
            <a href="/{{locale}}">{{ "Portada" | trans }}<br></a>
          </li>
          <li>
            <a href="/{{locale}}/{{ 'corredores' | trans }}/{{ 'carreras' | trans }}">{%trans%}Carreras{%endtrans%}<br></a>
